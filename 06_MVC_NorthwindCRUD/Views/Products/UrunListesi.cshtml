@model ProductsModel

@{
    ViewData["Title"] = "UrunListesi";
}

<h1>Ürünler Listesi</h1>

<p>
    <a asp-action="Ekle">Yeni Ürün Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Supplier.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Discontinued)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.plist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discontinued)
            </td>
            <td>
                <a asp-action="Detay" asp-asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-warning">Detay</a>
                <a asp-action="Guncelle" asp-asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-primary">Güncelle</a>
                <a asp-action="Sil" asp-asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
